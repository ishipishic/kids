
# WEEK 1 ASSIGNMENT : ARIMA MODEL


# Objective: Apply ARIMA on a time series, forecast and evaluate

import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from statsmodels.tsa.stattools import adfuller
from statsmodels.graphics.tsaplots import plot_acf, plot_pacf
from statsmodels.tsa.arima.model import ARIMA
from sklearn.metrics import mean_absolute_error, mean_squared_error
import math


# 1. DATA COLLECTION (Public Reproducible)


np.random.seed(1)

dates = pd.date_range(start="2020-01-01", end="2025-01-01", freq="D")
n = len(dates)

# create stock-price like random walk with trend
trend = np.linspace(0, 5, n)
noise = np.random.normal(0, 1, n)

price = 50 + trend + np.cumsum(noise)

df = pd.DataFrame({"Adj Close": price}, index=dates)


# 2. DATA PREPROCESSING


# check missing values
print("Missing values:", df.isna().sum().sum())

# Stationarity Test : ADF
def adf_test(series):
    result = adfuller(series)
    print("ADF Statistic:", result[0])
    print("p-value:", result[1])

print("ADF ON ORIGINAL SERIES")
adf_test(df["Adj Close"])

# Differencing if not stationary
df_diff = df["Adj Close"].diff().dropna()

print("ADF ON DIFFERENCED SERIES")
adf_test(df_diff)

# Split 80-20
train_size = int(0.8 * n)

train = df["Adj Close"][:train_size]
test = df["Adj Close"][train_size:]


# 3. MODEL DEVELOPMENT


plt.figure()
plot_acf(df_diff)
plt.figure()
plot_pacf(df_diff)

# From plots choose p=1, d=1, q=1

model = ARIMA(train, order=(1,1,1))
fit = model.fit()

print(fit.summary())


# 4. FORECASTING


forecast = fit.forecast(steps=len(test))

plt.figure()
plt.plot(test.values)
plt.plot(forecast.values)


# 5. MODEL EVALUATION


mae = mean_absolute_error(test, forecast)
mse = mean_squared_error(test, forecast)
rmse = math.sqrt(mse)

print("MAE:", mae)
print("MSE:", mse)
print("RMSE:", rmse)


# 6. VISUALIZATION & ANALYSIS


# Residual Plot
resid = fit.resid

plt.figure()
plt.plot(resid)

print("Residual mean:", resid.mean())

