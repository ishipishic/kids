
# WEEK 2 ASSIGNMENT : LSTM & ARIMA COMPARISON


import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import tensorflow as tf
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import LSTM, Dense, Dropout
from sklearn.preprocessing import MinMaxScaler
from sklearn.metrics import mean_absolute_error, mean_squared_error, mean_absolute_percentage_error
import math
from statsmodels.tsa.arima.model import ARIMA


# 1. DATA COLLECTION (Same Public Series)


np.random.seed(2)

dates = pd.date_range("2018-01-01", "2023-01-01", freq="D")
n = len(dates)

trend = np.linspace(0, 10, n)
noise = np.random.normal(0, 1, n)

price = 100 + trend + np.cumsum(noise)

df = pd.DataFrame({"Adj Close": price}, index=dates)

# 2. PREPROCESSING FOR LSTM


scaler = MinMaxScaler(feature_range=(0,1))

data = scaler.fit_transform(df)

train_size = int(0.8 * n)
train = data[:train_size]
test = data[train_size:]

# sliding window
def create_supervised(dataset, window=60):
    X, y = [], []
    for i in range(window, len(dataset)):
        X.append(dataset[i-window:i, 0])
        y.append(dataset[i,0])
    return np.array(X), np.array(y)

window = 60
X_train, y_train = create_supervised(train, window)
X_test, y_test = create_supervised(test, window)

# reshape
X_train = X_train.reshape(X_train.shape[0], X_train.shape[1], 1)
X_test = X_test.reshape(X_test.shape[0], X_test.shape[1], 1)


# 3. ARIMA MODEL (Reuse Logic)


arima_train = df["Adj Close"][:train_size]
arima_test = df["Adj Close"][train_size:]

model_arima = ARIMA(arima_train, order=(1,1,1)).fit()
forecast_arima = model_arima.forecast(len(arima_test))


# 4. LSTM MODEL DEVELOPMENT


model = Sequential()

model.add(LSTM(units=50, return_sequences=True, input_shape=(X_train.shape[1],1)))
model.add(Dropout(0.2))

model.add(LSTM(units=50))
model.add(Dropout(0.2))

model.add(Dense(1))

model.compile(optimizer="adam", loss="mean_squared_error")

history = model.fit(X_train, y_train, epochs=20, batch_size=32, validation_split=0.1)


# 5. PREDICTION


pred_lstm = model.predict(X_test)
pred_lstm = scaler.inverse_transform(pred_lstm.reshape(-1,1))
y_test_real = scaler.inverse_transform(test[window:].reshape(-1,1))


# 6. EVALUATION

mse_lstm = mean_squared_error(y_test_real, pred_lstm)
rmse_lstm = math.sqrt(mse_lstm)

mae_lstm = mean_absolute_error(y_test_real, pred_lstm)
mape_lstm = mean_absolute_percentage_error(y_test_real, pred_lstm)

print("LSTM MAE:", mae_lstm)
print("LSTM RMSE:", rmse_lstm)
print("LSTM MAPE:", mape_lstm)

# ARIMA Eval
print("ARIMA MAE:", mean_absolute_error(arima_test, forecast_arima))
print("ARIMA RMSE:", math.sqrt(mean_squared_error(arima_test, forecast_arima)))
print("ARIMA MAPE:", mean_absolute_percentage_error(arima_test, forecast_arima))


# 7. VISUALIZATIONS

plt.figure()
plt.plot(y_test_real)
plt.plot(pred_lstm)
plt.plot(forecast_arima.values)

plt.figure()
plt.plot(history.history["loss"])
plt.figure()
plt.plot(history.history["val_loss"])

# residuals
plt.figure()
plt.plot(y_test_real - pred_lstm)

